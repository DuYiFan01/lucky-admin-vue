<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.anlucky.system.mapper.TablePoMapper">


    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="cn.anlucky.system.pojo.tools.TablePo">
        <result column="name" property="name" />
        <result column="comment" property="comment"/>
        <result column="create_time" property="createTime"/>
        <result column="update_time" property="updateTime"/>
    </resultMap>
    <select id="showTableSatus" resultType="cn.anlucky.system.pojo.tools.TablePo">
        select
            table_name as name,
            table_comment as comment,
            create_time,
            update_time
        from
            information_schema.tables
        where
            table_schema = (select database())
        <if test="name != null and name != ''">
            and table_name = #{name}
        </if>
        <if test="comment != null and comment != ''">
            and table_comment = #{comment}
        </if>
        <if test="entity != null and entity != ''">
            and table_name = #{entity}
        </if>

    </select>


</mapper>
